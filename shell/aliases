#!/bin/bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

alias c='clear'
alias ch='history -c && > ~/.bash_history'
alias e=$EDITOR
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias map='xargs -n1'
alias n='npm'
alias q='exit'
alias gpush='git add . && git commit -m "minor updates" && git push'

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Load OS specific aliases

if [ "$OS" = 'osx' ]; then
     source "$DOTFILES_DIR_PATH/shell/os_x/aliases"
elif [ "$OS" = 'ubuntu' ]; then
     source "$DOTFILES_DIR_PATH/shell/ubuntu/aliases"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
